# Database Configuration
DATABASE_URL=postgresql://calculator_user:calculator_pass@db:5432/calculator_db

# PostgreSQL Configuration (for Docker Compose)
POSTGRES_USER=calculator_user
POSTGRES_PASSWORD=calculator_pass
POSTGRES_DB=calculator_db

# Test Database Configuration (optional)
TEST_DATABASE_URL=postgresql://calculator_user:calculator_pass@localhost:5432/test_db

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# Application Configuration
APP_NAME=FastAPI User Management
APP_VERSION=1.0.0
DEBUG=False

# Security Configuration (generate strong secret key for production)
# Generate a secure secret key using: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Docker Hub Configuration (for CI/CD - set in GitHub Secrets)
# DOCKERHUB_USERNAME=your-dockerhub-username
# DOCKERHUB_TOKEN=your-dockerhub-access-token
